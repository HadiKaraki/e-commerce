<% layout('layouts/boilerplate')%>

    <head>
        <meta charset="utf-8">
        <title>Login</title>
        <link rel="stylesheet" href="/Login.css">
    </head>

    <body>
        <div class="center">
            <div class="back-button">
                <button type="button" style="border: none; display: inline;" id="goBack"><i class="fa fa-arrow-left"
                        aria-hidden="true"></i> Back</button>
            </div>
            <h1>Login</h1>
            <form action="/user/login" method="POST">
                <div class="txt_field">
                    <input type="text" id="username" name="username" autofocus required>
                    <span></span>
                    <label>Username</label>
                </div>
                <div class="txt_field">
                    <input type="password" id="password" name="password" autofocus required>
                    <span></span>
                    <label>Password</label>
                </div>
                <div class="pass"><a href="/user/forgotpassword">Forgot Password?</a></div>
                <input type="submit" value="Login" id="loginButton">
                <div class="signup_link">
                    Not a member? <a href="/user/register">Signup</a>
                </div>
            </form>
        </div>
        <div class="spinner-border text-primary" id="spinner" style="top: 82.3%; left: 48.6%; position: absolute; display: none;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <script src="/goBack.js"></script>
        <script src="/login.js"></script>
    </body>

    </html>